{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@common/constants/*": ["./libs/constants/src/lib/*"],
      "@common/configuration/*": ["./libs/configuration/src/lib/*"],
      "@common/middlewares/*": ["./libs/middlewares/src/lib/*"],
      "@common/utils/*": ["./libs/utils/src/lib/*"],
      "@common/interfaces/*": ["./libs/interfaces/src/lib/*"],
      "@common/interceptors/*": ["./libs/interceptors/src/lib/*"],
      "@common/decorator/*": ["./libs/decorator/src/lib/*"],
      "@common/schemas/*": ["./libs/schemas/src/lib/*"],
      "@common/entities/*": ["./libs/entities/src/lib/*"],
      "@common/guards/*": ["./libs/guards/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
